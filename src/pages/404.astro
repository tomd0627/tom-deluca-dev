---
import Section from "../components/Section.astro";
import SectionIntro from "../components/SectionIntro.astro";
import LayoutErrorPage from "../layouts/LayoutErrorPage.astro";
---

<LayoutErrorPage
  title="Tom DeLuca | 404"
  description="404. This page can't be found."
>
  <Section cssClass="section--vertical-center section--404" title="404">
    <div class="align-center">
      <SectionIntro>
        <h1 class="animate-fade">
          Whoops! You broke the internet <i class="fa-regular fa-face-smile"
          ></i>
        </h1>
        <p class="animate-fade">Whatever you were looking for isn't here.</p>
      </SectionIntro>
      <p class="animate-fade">
        <a href="/" class="button">Go back home</a>
      </p>
    </div>
  </Section>
</LayoutErrorPage>
