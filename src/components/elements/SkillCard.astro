---
export interface Props {
  name: string;
  cssClass: string;
  icon: string;
}

const { name, cssClass, icon } = Astro.props;
---

<div
  class=`skill-card-list__item skill-card-list__item--${cssClass} animate-slide`
  role="article"
  aria-label={`${name} skill`}
>
  <i class=`skill-card-list__item__icon fa-solid fa-${icon}` aria-hidden="true"></i>
  <h3>{name}</h3>
  <slot />
</div>
