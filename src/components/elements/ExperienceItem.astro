---
export interface Props {
  title: string;
  date?: string;
  company?: string;
}

const { title, date, company } = Astro.props;
---

<div class="experience-card animate-slide">
  <div class="experience-card__header">
    <h3 class="experience-card__title">{title}</h3>
    {date ? <span class="experience-card__date">{date}</span> : null}
  </div>
  {company ? <p class="experience-card__company">{company}</p> : null}
  <div class="experience-card__content">
    <slot />
  </div>
</div>
