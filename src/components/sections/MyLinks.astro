---
import Section from '../elements/Section.astro';
import SectionIntro from '../elements/SectionIntro.astro';
import SectionTitle from '../elements/SectionTitle.astro';
---

<Section cssClass="section--links" title="links">
  <SectionIntro>
    <SectionTitle title="Let's connect" />
    <p class="animate-fade">Interested in working together? Let's start a conversation!</p>
  </SectionIntro>
  <div class="button-list button-list--center">
    <div class="animate-fade button-list__item">
      <a
        href="mailto:tomd0627@gmail.com"
        class="button button--secondary"
        aria-label="Email Tom DeLuca"><i class="fas fa-envelope" aria-hidden="true"></i> Email me</a
      >
    </div>
    <div class="animate-fade button-list__item">
      <a
        href="tel:18459872998"
        class="button button--secondary"
        aria-label="Call Tom DeLuca at 845-987-2998"
        ><i class="fas fa-phone" aria-hidden="true"></i> Call me</a
      >
    </div>
    <div class="animate-fade button-list__item">
      <a href="/files/Tom_DeLuca_Resume_Front_End.pdf" download class="button button--primary"
        ><i class="fas fa-file-lines"></i> Senior Front-End Resume</a
      >
    </div>
    <div class="animate-fade button-list__item">
      <a href="/files/Tom_DeLuca_Resume_Office_Clerical.pdf" download class="button button--primary"
        ><i class="fas fa-file-lines"></i> Office/Clerical Resume</a
      >
