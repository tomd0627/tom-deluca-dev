---
import SkillCard from "../elements/SkillCard.astro";
import Section from "../elements/Section.astro";
import SectionIntro from "../elements/SectionIntro.astro";
import SectionTitle from "../elements/SectionTitle.astro";
---

<Section cssClass="section--skills" title="skills">
  <SectionIntro>
    <SectionTitle title="My skills" />
    <p class="animate-fade">
      Here's what skills I use to craft beautiful web experiences and foster an
      uplifting culture.
    </p>
  </SectionIntro>
  <div class="skill-card-list">
    <SkillCard name="Hard Skills" cssClass="hard-skills" icon="gear">
      <ul>
        <li>HTML</li>
        <li>CSS</li>
        <li>JavaScript</li>
        <li>jQuery</li>
        <li>Design Translation</li>
        <li>Content Entry (Optimizely, Sitecore, Drupal, WordPress)</li>
        <li>MJML</li>
        <li>Bootstrap</li>
        <li>Sitecore (SXA, Content Editor)</li>
        <li>Storybook</li>
        <li>Tailwind CSS</li>
        <li>GSAP</li>
        <li>React</li>
        <li>TypeScript</li>
        <li>Angular</li>
        <li>Handlebars.js</li>
        <li>Mustache.js</li>
        <li>Nunjucks</li>
        <li>.NET</li>
        <li>Vue.js</li>
        <li>Svelte</li>
        <li>AI (ChatGPT, Claude, Gemini, GitHub Copilot)</li>
      </ul>
    </SkillCard>
    <SkillCard name="Soft Skills" cssClass="soft-skills" icon="users">
      <ul>
        <li>Collaborative team player</li>
        <li>Efficient communicator</li>
        <li>Strong time management</li>
        <li>Empathetic</li>
        <li>Positive</li>
        <li>Solution-oriented</li>
        <li>Adaptable</li>
        <li>High work ethic</li>
        <li>Reliable</li>
      </ul>
    </SkillCard>
  </div>
</Section>
